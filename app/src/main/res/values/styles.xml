<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:windowSoftInputMode">adjustPan</item>
    </style>

    <style name="MContainer">
        <!--prevent click through previous fragment if backstacked-->
        <item name="android:clickable">true</item>
        <item name="android:background">@color/defaultBackgroundAndroid</item>
    </style>

    <style name="BottomMenuList">
        <item name="android:colorBackground">@color/defaultBackgroundAndroid</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_height">@dimen/bottom_sheet_list_dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomMenuHeadList" parent="FontStyleBody_Bold">
        <item name="android:background">@drawable/bg_bottom_sheet_headlist</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:layout_height">@dimen/bottom_sheet_list_dp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    
    <style name="Shimmer">
        <item name="shimmer_auto_start">true</item>
        <item name="shimmer_base_color">@color/md_grey_100</item>
        <item name="shimmer_highlight_alpha">0.4</item>
        <item name="shimmer_highlight_color">@color/md_grey_300</item>
    </style>

    <style name="ButtonTextview">
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingEnd">8dp</item>
        <item name="android:paddingBottom">4dp</item>
    </style>
</resources>